@{
    ViewBag.Title = "IssueTrack";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    @*@Scripts.Render("~/scripts/RequestForPartial.js")*@
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="form-group">
                <div class="col-5">
                    <label for="projectNameLabel">Choose project name:</label>
                    @*<select class="form-control" id="projectidForAjax">
                        @foreach (var item in ViewBag.Projects)
                        {
                            <option>@item.Name</option>
                        }
                    </select>*@
                    @Html.DropDownList("ProjectsList", ViewBag.Projects as SelectList, new { id = "projectidForAjax" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col" id="partialDivForAjax">
                @Html.Partial("_GetIssueDataPartial")
            </div>
        </div>
        <div class="row">
            <div class="col-lg-offset-10">
                <button type="button" class="btn btn-dark">Create issue</button>
            </div>
        </div>
    </div>
</body>
</html>



@section scripts{
    <script type="text/javascript">
        $(function () {
            $('#projectidForAjax').change(function () {
                var id = $(this).val();
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("GetIssueData")/' + id,
                    success: function (data) {
                        $('#partialDivForAjax div').replaceWith(data);
                    }
                });
            });
        })
    </script>
}
