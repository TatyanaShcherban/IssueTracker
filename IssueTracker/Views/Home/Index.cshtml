@{
    ViewBag.Title = "IssueTrack";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- DROPDOWN -->
<div class="row">
    <div class="col-lg-12">
        <h3>Choose project name:</h3>
        <div class="panel-body">
            @Html.DropDownList("ProjectsList", ViewBag.Projects as SelectList, new { id = "projectidForAjax", @class = "form-control" })
        </div>
    </div>
</div>
<!-- TABLE -->
<div class="row">
    <div class="col-lg-12">
        <div id="partialDivForAjax">
            <h3>Issues list:</h3>
            <div class="panel-body">
                @Html.Partial("_GetIssueDataPartial")
            </div>
        </div>
    </div>
</div>
<!-- BUTTON -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel-body">
            <button type="button" class="btn btn-primary" style="float: right;">Create issue</button>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(function () {
            $('#projectidForAjax').change(function () {
                var id = $(this).val();
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("GetIssueData")/' + id,
                    success: function (data) {
                        $('#partialDivForAjax table').replaceWith(data);
                    }
                });
            });
        })
    </script>
}
