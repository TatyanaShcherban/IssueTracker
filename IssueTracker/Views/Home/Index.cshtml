@{
    ViewBag.Title = "IssueTrack";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- DROPDOWN -->
<div class="row">
    <div class="col-lg-12">
        <h3>Choose project name:</h3>
        <div class="panel-body">
            @Html.DropDownList("ProjectsList", ViewBag.Projects as SelectList, new { id = "projectidForAjax", @class = "form-control" })
        </div>
    </div>
</div>
<!-- TABLE -->
<div class="row">
    <div class="col-lg-12">
        <div id="partialDivForAjax">
            <h3>Issues list:</h3>
            <div class="panel-body">
                @Html.Partial("_GetIssueDataPartial")
            </div>
        </div>
    </div>
</div>
<!-- BUTTON -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel-body">
            <button type="button" id="createButton" class="btn btn-primary" style="float:right;" data-toggle="modal" data-target="#issue">Create</button>
        </div>
    </div>
</div>
<!-- FORM -->
<div id="issue" class="modal fade">
    <div class="modal-dialog modal-dialog-centered modal-lg" id="dialogContent"></div>
</div>

@section scripts{
    <script type="text/javascript">
        $(function () {
            $('#projectidForAjax').change(function () {
                var id = $(this).val();
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("GetIssueData")/' + id,
                    success: function (data) {
                        $('#partialDivForAjax table').replaceWith(data);
                    }
                });
            });
        })

        $(function () {
            $('#createButton').click(function () {
                var id = $("#projectidForAjax").val();
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("CreateIssueWindow")/' + id,
                    success: function (data) {
                        $('#dialogContent').html(data);
                        $('#issue').modal('show');

                    }
                });
            });
        })

        $(function () {
            $('button[name=editButton]').click(function () {
                var id = $(this).val();
                $.ajax({
                    type: 'GET',
                    url: '@Url.Action("EditIssueWindow")/' + id,
                    success: function (data) {
                        $('#dialogContent').html(data);
                        $('#issue').modal('show');
                    }
                });
            });
        })
    </script>
}
